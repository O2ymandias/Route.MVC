@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">

		<form asp-action="ResetPassword" method="post">
			<div class="text-danger" asp-validation-summary="ModelOnly"></div>
			<br />
			<div>
				<input asp-for="NewPassword" placeholder="New Password" required="">
				<span class="text-danger" asp-validation-for="NewPassword"></span>
			</div>
			<br />
			<div>
				<input asp-for="ConfirmNewPassword" placeholder="Confirm New Password" required="">
				<span class="text-danger" asp-validation-for="ConfirmNewPassword"></span>
			</div>

			<input type="submit" value="Reset">
		</form>

	</div>
</div>
@section Scripts
{
	<partial name="_ValidationScriptsPartial" />
}


