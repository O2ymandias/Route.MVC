@model IReadOnlyList<DepartmentVM>
@{
	ViewData["Title"] = "Index";
}

<h1>All Departments</h1>

@if (TempData.ContainsKey("Message"))
{
	<div class="mt-3 alert alert-success" id="alertMessage">
		@TempData["Message"]
	</div>
}

<a class="mt-3 btn btn-success" asp-action="Create">Create New Department</a>

@if (Model.Count > 0)
{
	<table class=" mt-3 table table-striped table-bordered table-hover">

		<thead>
			<tr class="text-center">
				<th>Code</th>
				<th>Name</th>
				<th>Date Of Creation</th>

				<th>Details</th>
				<th>Update</th>
				<th>Delete</th>
			</tr>
		</thead>


		<tbody>
			@foreach (var department in Model)
			{
				<tr class="text-center">
					<td>@department.Code</td>
					<td>@department.Name</td>
					<td>@department.DateOfCreation</td>

					<partial name="IndexButtonsPartial" model="@department.Id.ToString()" />
				</tr>
			}
		</tbody>

	</table>
}
else
{
	<div class=" mt-3 alert alert-info">
		<h2>
			<b class="text-black">There Is No Departments Yet</b>
		</h2>
	</div>
}

